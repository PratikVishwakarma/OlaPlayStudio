<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgone"
    tools:context="com.olahackerearth.pratik.olaplaystudios.ui.portfolio.BasicInformationFragment">

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_refresh_layout"
        style="@style/SchoolFragmentListSwipeRefreshLayout">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimaryDark"
                    android:padding="8dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view"
                        android:layout_width="@dimen/round_image_card_size"
                        android:layout_height="@dimen/round_image_card_size"
                        android:padding="4dp"
                        android:background="@drawable/round"
                        card_view:cardCornerRadius="@dimen/card_circle_radius"
                        card_view:cardElevation="6dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="@dimen/round_image_size"
                        android:layout_height="@dimen/round_image_size"
                        android:src="@drawable/pratik"
                        android:layout_margin="2dp"/>

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp">
                        <TextView
                            android:id="@+id/student_profile_textview_student_name"
                            style="@style/SchoolStudentProfileBasicDetailHighlightTextView"
                            android:text="Pratik Vishwakarma"/>
                        <TextView
                            android:id="@+id/student_profile_textview_student_rollno"
                            style="@style/SchoolStudentProfileBasicDetailTextView"
                            android:text="Android Developer"/>
                        <TextView
                            android:id="@+id/student_profile_textview_student_class"
                            style="@style/SchoolStudentProfileBasicDetailTextView"
                            android:text="pratikvishwakarma00@gmail.com"/>
                        <TextView
                            android:id="@+id/student_profile_textview_student_attendance"
                            style="@style/SchoolStudentProfileBasicDetailTextView"
                            android:text="9406661843"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    style="@style/SchoolCardsFrameLayout"
                    android:elevation="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/SchoolCardsSubHeadingTextView"
                            android:text="EXPERIENCE"/>
                        <TextView
                            android:id="@+id/student_profile_textview_student_gender"
                            style="@style/SchoolCardsSubHeadingTextView"
                            android:textColor="@color/primary_text"
                            android:layout_marginLeft="10dp"
                            android:text="Naaniz, Indore"/>
                        <TextView
                            android:id="@+id/student_profile_textview_student_dob"
                            style="@style/SchoolCardsSubDetailTextView"
                            android:text="Lead Android Developer"/>
                        <TextView
                            android:id="@+id/student_profile_textview_student_contact_no"
                            style="@style/SchoolCardsSubDetailTextView"
                            android:textSize="12dp"
                            android:textColor="@color/secondary_text"
                            android:text="SEPT 2016 - PRESENT"/>
                        <TextView
                            android:id="@+id/student_profile_textview_student_address"
                            style="@style/SchoolCardsSubDetailTextView"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"
                            android:text="Technologies: Java, Android, JavaScript."/>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    style="@style/SchoolCardsFrameLayout"
                    android:elevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/SchoolCardsSubHeadingTextView"
                            android:text="EDUCATION"/>
                        <TextView
                            style="@style/SchoolCardsSubHeadingTextView"
                            android:textColor="@color/primary_text"
                            android:layout_marginLeft="10dp"
                            android:text="Rajiv Gandhi Technical University, Bhopal "/>
                        <TextView
                            style="@style/SchoolCardsSubDetailTextView"
                            android:text="Bachelor of Engineering in Computer Science"/>
                        <TextView
                            style="@style/SchoolCardsSubDetailTextView"
                            android:textSize="12dp"
                            android:textColor="@color/secondary_text"
                            android:text="JULY  2013 - JUNE 2017"/>
                        <TextView
                            style="@style/SchoolCardsSubDetailTextView"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"
                            android:text="CGPA: 6.85 / 10"/>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    style="@style/SchoolCardsFrameLayout"
                    android:elevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/SchoolCardsSubHeadingTextView"
                            android:text="ACHIEVEMENTS &amp; AWARDS"/>
                        <TextView
                            style="@style/SchoolCardsSubHeadingTextView"
                            android:textColor="@color/primary_text"
                            android:layout_marginLeft="10dp"
                            android:text="TCS CodeVita 2016"/>
                        <TextView
                            style="@style/SchoolCardsSubDetailTextView"
                            android:text="Ranked 512 in India"/>

                        <TextView
                            style="@style/SchoolCardsSubHeadingTextView"
                            android:textColor="@color/primary_text"
                            android:layout_marginLeft="10dp"
                            android:text="Inter-College Code Combat By CDGI, Indore"/>
                        <TextView
                            style="@style/SchoolCardsSubDetailTextView"
                            android:text="First Prize - 2015 &amp; 2016"/>

                        <TextView
                            style="@style/SchoolCardsSubDetailTextView"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"
                            android:text="Technologies: C &amp; C++"/>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    style="@style/SchoolCardsFrameLayout"
                    android:elevation="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/SchoolCardsSubHeadingTextView"
                            android:text="STRENGTHS"/>
                        <TextView
                            style="@style/SchoolCardsSubDetailTextView"
                            android:text="Quick Learner"/>
                        <TextView
                            style="@style/SchoolCardsSubDetailTextView"
                            android:text="Strong Implementation"/>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    style="@style/SchoolCardsFrameLayout"
                    android:elevation="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/SchoolCardsSubHeadingTextView"
                            android:text="HOBBIES"/>
                        <TextViewS
                            style="@style/SchoolCardsSubDetailTextView"
                            android:text="Movies"/>
                        <TextView
                            style="@style/SchoolCardsSubDetailTextView"
                            android:text="TV Shows"/>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    style="@style/SchoolCardsFrameLayout"
                    android:elevation="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/SchoolCardsSubHeadingTextView"
                            android:text="LANGUAGES"/>
                        <TextViewS
                            style="@style/SchoolCardsSubDetailTextView"
                            android:text="English"/>
                        <TextView
                            style="@style/SchoolCardsSubDetailTextView"
                            android:text="Hindi"/>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    style="@style/SchoolCardsFrameLayout"
                    android:elevation="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="6dp">
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
